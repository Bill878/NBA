<VBox styleClass="background"  alignment="CENTER" prefHeight="300" prefWidth="500" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RecordController">

    <Label text="Season Record" styleClass="label-h2" alignment="CENTER" />

    <TableView fx:id="recordTv">
        <columns>
            <TableColumn fx:id="round" text="Round" prefWidth="125"/>
            <TableColumn fx:id="game" text="Game" prefWidth="125"/>
            <TableColumn fx:id="win" text="Winning Team" prefWidth="125"/>
            <TableColumn fx:id="lose" text="Losing Team" prefWidth="125"/>
        </columns>
    </TableView>

    <Button text="Close" onAction="#close" prefWidth="120" />

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
